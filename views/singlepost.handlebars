<div class="card">
    <div class="card-header d-flex flex-row justify-content-between">
        <h2>
            <a href="/post/{{post.id}}">
                <div class="col-8 heading">{{post.post_title}}</div>
            </a>
        </h2>

        <div class="col-4">by: {{post.user.username}} on {{format_date post.date_created}}</div>
    </div>  

    <p class="card-body">   
        {{post.post_description}}
    </p>
</div>
<input type="hidden" name="post-id" value="{{post.id}}"/>
{{!-- {{#if logged_in}} --}}
<div class="card">
    <div class="card-header"></div>
    <form class="card-body" id="comment-form">
    
        <label class="form-label">Comment:</label>
        <textarea class="form-input" id="comment-body" name="comment-data"></textarea>
        <button type="submit" class="btn btn-primary common-button">Submit</button>
    </form>
    {{> comments post.comments}} 
</div>
{{!-- {{/if}} --}}
<script src="/js/comment.js"></script>