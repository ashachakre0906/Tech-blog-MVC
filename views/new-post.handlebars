<div class="card">
    <h2 class="card-header">New Post</h2>
    <form class="card-body" id="create-post-form">
        <input type="hidden" name="post-id" value="{{post.id}}">
        <div>
            <label class="form-label">Title</label>
            <input type="text" class="form-input" name="post-title">
        </div>
        <div>
            <label class="form-label">Description</label>
            <textarea class="form-textarea form-input" name="post-description" data-number="8"></textarea>
        </div>
        <button class="btn btn-primary">Create Post</button>
    </form>
</div>
<script src="/js/new-post.js"></script>